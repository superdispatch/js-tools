{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prebump": "yarn tsc && yarn lint && yarn test",
    "bump": "lerna version",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "js-tools lint --fix"
  },
  "prettier": "./packages/prettier-config",
  "devDependencies": {
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.157",
    "@types/prettier": "^2.0.2",
    "@typescript-eslint/typescript-estree": "^3.6.0",
    "eslint": "^7.4.0",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "snapshot-diff": "^0.8.1",
    "strip-ansi": "^6.0.0",
    "typescript": "^4.0.2"
  }
}
