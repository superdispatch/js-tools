{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prebump": "yarn tsc && yarn lint && yarn test",
    "bump": "lerna version",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "js-tools lint --fix"
  },
  "prettier": "./packages/prettier-config",
  "devDependencies": {
    "@material-ui/core": "*",
    "@material-ui/icons": "*",
    "@superdispatch/ui": "*",
    "@types/eslint": "^6.1.8",
    "@types/execa": "^2.0.0",
    "@types/jest": "^25.1.4",
    "@types/lodash": "^4.14.149",
    "@types/prettier": "^2.0.0",
    "@typescript-eslint/typescript-estree": "^2.25.0",
    "eslint": "^6.8.0",
    "execa": "^4.0.0",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.20.2",
    "lint-staged": "^10.0.8",
    "prettier": "^2.0.2",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "snapshot-diff": "^0.7.0",
    "typescript": "^3.8.3"
  }
