{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "scripts": {
    "bump": "lerna version",
    "tdd": "jest --watch",
    "test": "jest --coverage",
    "lint": "eslint \"{*,packages/**/*}.js\"",
    "format-base": "prettier \"{*,packages/**/*}.{md,yml,json}\"",
    "format": "yarn format-base --write",
    "check-format": "yarn format-base --list-different"
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "devDependencies": {
    "eslint": "^6.1.0",
    "jest": "^24.8.0",
    "lerna": "^3.16.4",
    "prettier": "^1.18.2",
    "snapshot-diff": "^0.5.2",
    "typescript": "^3.5.3"
  }
}
