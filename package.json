{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "prebump": "yarn tsc && yarn lint && yarn test",
    "bump": "lerna version",
    "lint": "js-tools lint",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "js-tools lint --fix"
  },
  "prettier": "./packages/prettier-config",
  "devDependencies": {
    "@types/eslint": "^6.8.1",
    "@types/execa": "^2.0.0",
    "@types/jest": "^25.2.3",
    "@types/lodash": "^4.14.152",
    "@types/prettier": "^2.0.1",
    "@typescript-eslint/typescript-estree": "^3.0.1",
    "eslint": "^7.1.0",
    "execa": "^4.0.2",
    "husky": "^4.2.3",
    "jest": "^26.0.1",
    "lerna": "^3.22.0",
    "lint-staged": "^10.2.6",
    "prettier": "^2.0.5",
    "snapshot-diff": "^0.8.0",
    "typescript": "^3.9.3"
  }
}
