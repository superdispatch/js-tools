{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run build --no-private",
    "lint": "js-tools lint",
    "prerelease": "yarn install --frozen-lockfile && yarn tsc && yarn lint && yarn test && yarn build",
    "release": "yarn lerna publish",
    "tdd": "jest --watch",
    "test": "jest --coverage"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "js-tools lint --fix"
  },
  "prettier": "./packages/prettier-config",
  "devDependencies": {
    "@actions/cache": "^1.0.3",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@babel/cli": "^7.10.4",
    "@babel/core": "^7.10.4",
    "@babel/runtime": "^7.10.4",
    "@types/eslint": "^7.2.0",
    "@types/jest": "^26.0.4",
    "@types/lodash": "^4.14.157",
    "@types/node": "^14.11.2",
    "@types/prettier": "^2.0.2",
    "@typescript-eslint/typescript-estree": "^4.3.0",
    "eslint": "^7.4.0",
    "globby": "^11.0.1",
    "husky": "^4.2.3",
    "jest": "^26.1.0",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.2.11",
    "prettier": "^2.0.5",
    "snapshot-diff": "^0.8.1",
    "strip-ansi": "^6.0.0",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.2"
  }
}
