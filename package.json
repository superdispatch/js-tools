{
  "name": "js-tools",
  "version": "0.0.0",
  "private": true,
  "license": "MIT",
  "workspaces": {
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "lerna run version --parallel",
    "lint": "js-tools lint",
    "prerelease": "yarn install --frozen-lockfile && yarn tsc && yarn lint && yarn test",
    "release": "lerna publish",
    "tdd": "jest --watch",
    "test": "jest --coverage --forceExit"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": "js-tools lint --fix"
  },
  "prettier": "./packages/prettier-config",
  "jest": {
    "coverageProvider": "v8",
    "globals": {
      "ts-jest": {
        "tsconfig": "tsconfig.test.json"
      }
    },
    "preset": "ts-jest",
    "roots": [
      "<rootDir>/packages/babel-preset",
      "<rootDir>/packages/eslint-plugin",
      "<rootDir>/packages/prettier-config"
    ],
    "snapshotSerializers": [
      "snapshot-diff/serializer"
    ],
    "testEnvironment": "node",
    "watchPlugins": [
      "jest-watch-typeahead/filename",
      "jest-watch-typeahead/testname"
    ]
  },
  "devDependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.10.4",
    "@babel/runtime": "^7.12.5",
    "@types/eslint": "^7.2.4",
    "@types/jest": "^26.0.15",
    "@types/lodash": "^4.14.165",
    "@types/node": "^14.14.6",
    "@types/prettier": "^2.1.5",
    "@typescript-eslint/typescript-estree": "^4.6.1",
    "eslint": "^7.13.0",
    "globby": "^11.0.1",
    "husky": "^4.2.3",
    "jest": "^26.6.3",
    "jest-watch-typeahead": "^0.6.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.1",
    "prettier": "^2.0.5",
    "snapshot-diff": "^0.8.1",
    "ts-jest": "^26.4.3",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  }
}
